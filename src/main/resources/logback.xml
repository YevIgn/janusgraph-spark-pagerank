<configuration>
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!--<logger name="org.janusgraph" level="WARN" additivity="false"/>-->
    <!--<logger name="org.apache.hadoop" leavel="WARN" additivity="false"/>-->
    <!--<logger name="org.apache.cassandra" leavel="WARN" additivity="false"/>-->
    <!--<logger name="org.apache.spark" leavel="WARN" additivity="false"/>-->
    <!--<logger name="com.datastax" leavel="WARN" additivity="false"/>-->

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
